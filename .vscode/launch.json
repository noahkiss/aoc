{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch AoC Day",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/Day${input:day}/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Current AoC File",
            "program": "${file}"
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Enter Day (01, 02, etc.):",
            "default": "01"
        }
    ]
}
